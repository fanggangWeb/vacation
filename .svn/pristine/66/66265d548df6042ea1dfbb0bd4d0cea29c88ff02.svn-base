<template>
  <transition name="fade">
    <div class="box" :class="type" ref="box" v-if="state">
        {{ content }}
      </div>
  </transition>
</template>
<script>
  export default {
    data () {
      return {
        type: '',
        content: '测试弹出框',
        state: false
      }
    },
    methods: {
      MessageSuccess (text) {
        this.type = 'green'
        this.content = text
        this.state = true
        setTimeout(() => {
          this.state = false
        }, 3000)
      },
      MessageError (text) {
        this.type = 'red'
        this.content = text
        this.state = true
        setTimeout(() => {
          this.state = false
        }, 3000)
      }
    }
  }
</script>
